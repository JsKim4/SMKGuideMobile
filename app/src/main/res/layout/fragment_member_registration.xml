<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registrationMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterId"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint=" ID"
                    android:inputType="textEmailAddress"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:drawableLeft="@drawable/ic_lock_white"
                    android:layout_marginTop="100dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/edtRegisterPassword"
                    android:inputType="textPassword"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint=" PASSWORD"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:drawableLeft="@drawable/ic_key_white"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/edtRegisterName"
                    android:inputType="text"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint=" 이름"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/edtRegisterTelephone"
                    android:inputType="number"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint=" 전화번호"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/edtRegisterAddress"
                    android:inputType="text"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint=" 주소"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="@color/colorPrimary"
                    android:text="가입하기"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/registerButton" />
            <TextView
                android:id="@+id/tvFailMsg"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:textSize="13dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#FF2222"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                android:layout_marginBottom="50dp"
                ></TextView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>